 
<li id="delete<%=task.id%>">
  <% if task.status == false%>
    <%= task.title  %>
    <% unless task.deadline.nil? %>
      , to read: <%= task.deadline.strftime('%D')  %>
    <% end %>
  <% else %>
  <strike><%= task.title  %></strike>
<% unless task.deadline.nil? %>
  <strike>  , to read: <%= task.deadline.strftime('%D')  %></strike>
<% end %>
<% end %>
<%# Liens pour supp les tasks %>
<%= link_to task_path(task), method: :delete, remote: true, data: { confirm: "Are you sure?" } do %>
  <i class="fas fa-trash-alt"></i>
<% end %>
<%# checkbox  %>
<%= check_box_tag :status, 1, task.status , data: { remote: true, url: task_path(task), params: { id: task.id, status: !task.status}.to_param, method: "put" }%>
</li>
